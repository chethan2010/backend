pipeline{
	agent{
		label 'AGENT-1'
	}
	options{
	timeout(time:30, Unit:'MINUTES')
	disableConcurrent build()
	ansicolour('Xterm')
	}	
	stages{
		stage('Init'){
			steps{
				sh """
			echo this is test
				"""
			}
		}
    post{

     always{

    echo 'I always say hello'
    deleteDir()
}
    success{

        echo 'i will run when pipeline is success'
    }
    failure{

        echo 'i will run when pipe line is failure'
    }
  }
 }
}

